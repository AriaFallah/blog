<article>
  <header>
    <h2 class="title"><a href="{{.RelPermalink}}">{{.Title}}</a></h2>
    <h5>{{ .Description }}</h5>
    <a href="https://aria.ai" class="small">{{.Site.Params.author}}</a>
    <time class="small">{{ .Date.Format "2 Jan 2006" }}</time>
  </header>
  <section class="article">
    {{ .Content }}
  </section>
  <footer>
    {{ partial "components/disqus.gohtml" . }}
  </footer>
</article>
